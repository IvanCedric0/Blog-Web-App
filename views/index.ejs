                </svg>
                Create Post
            <a>
        </div>
      </div>
    </div>
  </div>
<div class="container posts text-center">
        <div class="col-md-12 text-center bg-body-tertiary border rounded-3"> 
            <% if (posts.length==0) { %>
                <h3 style="text-align: center;">There are no posts yet</h3>
                <% } else { %>
                    <h3 style="text-align: center;padding: 10px;">Posts</h3>
                    <% posts.forEach(post => { %>
                        <div class="post" style="padding: 10px;">
                            <h2 class="post-title"><%= post.title %></h2>
                            <p class="post-content"><%= post.content.substring(0, 100) %><% if (post.content.length > 100) { %>...<% } %></p>
                            <div class="post-actions">
                                <a href="/posts/<%= post.id %>" class="btn"><button>View Post</button></a>
                                <a href="/posts/<%= post.id %>/edit" class="btn"><button>Edit Post</button></a>
                                <a href="/posts/<%= post.id %>/delete" class="btn"><button>Delete Post</button></a>
                            </div>
                        </div>             
                    <% }) %>
                <% } %>
        </div>
</div>
